
@{
    ViewBag.Title = "Add User";

}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.css" />
<style>
    .loader {
    }
</style>
<div id="page-wrapper">

    <div class="row">
        <!-- Page Header -->
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>

        </div>
        <!--End Page Header -->
    </div>
    <!--forms--->
    <div ID="Loader" style="width:300px;height:300px;opacity: 0.8;position: absolute;
    top: 203px;
    left: 543px;
    z-index: 1;display:none">
        <p class="fas fa-circle-notch fa-spin" style="font-size:50px;position: absolute;
    top: 65px;
    left: 93px;
    padding: 30px;
    background: gray;
    text-align: center;
    margin: auto;"></p>
    </div>
    <!-- Row start -->
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">

            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <i class="icon-calendar"></i>
                    <h3 class="panel-title">Vehicle-In</h3>
                </div>
                <form>
                    <div class="panel-body">

                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-sx-12">
                                <div class="form-group">

                                    <input type="text" class="form-control" placeholder="First Name" id="txtFirstName" required="">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-sx-12">
                                <div class="form-group">

                                    <input type="text" class="form-control" placeholder="Last Name" required="" id="txtLastName">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-sx-12">
                                <div class="form-group">

                                    <input type="text" class="form-control" placeholder="Email" id="txtEmail" required="">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-sx-12">
                                <div class="form-group">

                                    <input type="text" class="form-control" placeholder="Phone Number" id="txtPhone" required="">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-sx-12">
                                <div class="form-group">

                                    <input type="password" class="form-control" placeholder="Password" id="txtPassword" required="">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-sm-6 col-sx-6">
                                <div class="form-group">



                                    @*<input type="text" class="form-control" placeholder="Remark" required="" id="txtRemark">*@
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-6 col-sx-6">
                                <button id="btnSave" class="btn btn-success pull-right">Save <i class="fa fa-save"></i></button>
                            </div>
                        </div>


                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Row end -->

</div>

@section Scripts{
    <script src="~/admin/assets/plugins/jquery-1.10.2.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
    <script>
    $(document).ready(function(){
        $("#btnSave").click(function(){

          $("#btnSave").html('Save  <i class="fas fa-circle-notch fa-spin" style="font-size:20px"></i>').attr('disabled',true);
          $("#Loader").css("display","block");
            var FirstName = $("#txtFirstName").val();
            var LastName = $("#txtLastName").val();
            var Email = $("#txtEmail").val();
            var PhoneNumber = $("#txtPhone").val();
            var Password = $("#txtPassword").val();

            var obj = { FirstName: FirstName, LastName: LastName, PasswordHash: Password, PhoneNumber: PhoneNumber, Email: Email};
            var jsonData=JSON.stringify(obj);
            var url ="/api/UserManagement/Add";
            try{
                $.ajax({
               url:url,
               type:'POST',
               dataType:'JSON',
               data:jsonData,
               contentType:'application/json; charset=utf-8',
               success:function(result){
                   $("#Loader").css("display","none");
                   swal("Thank You!", "User Register Succeessfully", "success")
                   $("#btnSave").html('Save <i class="fa fa-save"></i>').attr('disabled',false);

                     if(result==true){
                         $("#txtFirstName").val('');
                         $("#txtLastName").val('');
                         $("#txtEmail").val('');
                         $("#txtPhone").val('');
                         $("#txtPassword").val('');
                     }
                   console.log(result);
               },error:function(err){
                   if(err){
                      swal("Oh! No", "Something went wrong", "error") ;
                      console.log(err.responseText);
                      $("#btnSave").html('Save <i class="fa fa-save"></i>').attr('disabled',false);
                      $("#Loader").css("display","none");
                   }
               }
           })
           }catch(e){
               console.log(e)
           }

        })
    });
    </script>
}
